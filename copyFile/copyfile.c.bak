#include <stdio.h>
#include <string.h>

void main(int argc,char* argv[])
{
	char total[10240]={0};
	if (argc == 3) {
		char buff[1024]={0};

		FILE* fsrc = fopen(argv[1],"r");
	        if (fsrc == NULL) {
	    	      printf("file open failed");
	        }

		while (!feof(fsrc)) {
			fgets(buff,1024,fsrc);
			strcat(total,buff);
		}
	}
	FILE* fdest = fopen(argv[2],"w");
	if(fdest == NULL) {
		printf("file open failed");
	}
	fputs(total,fdest);

	return;
}
}
